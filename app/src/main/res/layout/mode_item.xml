<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="8dp">

    <com.santalu.diagonalimageview.DiagonalImageView
        android:id="@+id/modeMapIV3"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/midtown"
        app:di_borderColor="@color/black"
        app:di_borderEnabled="false"
        app:di_borderSize="3dp"
        app:di_distance="30dp"
        app:di_end="top"
        app:di_start="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.santalu.diagonalimageview.DiagonalImageView
        android:id="@+id/modeMapIV2"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:layout_marginEnd="-30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/kings_row"
        android:visibility="visible"
        app:di_borderColor="@color/black"
        app:di_borderEnabled="true"
        app:di_borderSize="4dp"
        app:di_distance="30dp"
        app:di_end="top"
        app:di_start="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/modeMapIV3"
        app:layout_constraintTop_toTopOf="parent" />

    <com.santalu.diagonalimageview.DiagonalImageView
        android:id="@+id/modeMapIV1"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:layout_marginEnd="-30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/paraiso"
        android:visibility="visible"
        app:di_borderColor="@color/black"
        app:di_borderEnabled="true"
        app:di_borderSize="4dp"
        app:di_distance="30dp"
        app:di_end="top"
        app:di_start="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/modeMapIV2"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <com.santalu.diagonalimageview.DiagonalImageView
        android:id="@+id/modeMapIV0"
        android:layout_width="30dp"
        android:layout_height="120dp"
        android:layout_marginEnd="-30dp"
        android:scaleType="centerCrop"
        android:src="@color/light_grey"
        app:di_borderColor="@color/light_grey"
        app:di_borderEnabled="false"
        app:di_borderSize="3dp"
        app:di_distance="30dp"
        app:di_end="top"
        app:di_start="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/modeMapIV1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/modeNameCL"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/modeMapIV0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/modeTV"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:gravity="center|start"
            android:text="@string/hybrid2"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/modeIV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/modeIV"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/heroes2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/modeTV"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintStart_toStartOf="@+id/modeTV"
            app:layout_constraintTop_toBottomOf="@+id/modeTV"
            tools:ignore="ContentDescription,ImageContrastCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>